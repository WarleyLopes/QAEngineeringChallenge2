{
  "name": "bellsant-machine-assessment-api",
  "version": "1.0.0",
  "description": "A Node.js API for assessing the health of machines based on their individual parts' conditions.",
  "main": "app.js",
  "scripts": {
    "start": "nodemon --exec ts-node app.ts",
    "test": "jest --coverage",
    "deploy": "ntl deploy --prod",
    "build": "tsc",
    "lint": "lint-staged"
  },
  "keywords": [],
  "author": "BellSant",
  "dependencies": {
    "@netlify/functions": "^2.0.2",
    "express": "^4.17.1",
    "serverless-http": "^3.2.0",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/node": "^14.18.61",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{html,css,less,ejs,json}": [
      "prettier --write"
    ],
    "*": [
      "yarn test"
    ]
  }
}
